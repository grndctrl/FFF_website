{% if sectionClass is not defined %}
  {% set sectionClass = [""] %}
{% endif %}

{% if text is not defined %}
  {% set text = "Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat." %}
{% endif %}

{% if subtext is not defined %}
  {% set subtext = "" %}
{% endif %}

<section class="section-md {{ sectionClass|join(' ') }}">
  <div class="container">

    <div class="row">
      <div class="col w-full lg:w-8/12 lg:mx-2/12 fw:w-6/12 fw:mx-3/12">
        <blockquote class="font-h3 mb-4">
          {{ text }}
        </blockquote>
        {% if subtext != "" %}
          <p class="font-sub text-grey">
            {{ subtext }}
          </p>
        {% endif %}
      </div>
    </div>

  </div>
</section>