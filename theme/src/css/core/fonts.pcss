.font-h1 {
  font-size: 34px;
  letter-spacing: 0;
  line-height: 41px;
}

.font-h2 {
  font-size: 34px;
  letter-spacing: 0;
  line-height: 41px;
}

.font-h3 {
  font-size: 24px;
  letter-spacing: 0.3px;
  line-height: 36px;
}

.font-h4 {
  font-family: BasisGrotesquePro;
  font-size: 24px;
  letter-spacing: 0.018em;
  line-height: 1.66667em;
}

.font-paragraph {
  @apply mb-1;
  font-size: 20px;
  letter-spacing: 0.5px;
  line-height: 32.2px;

  &:last-child {
    @apply mb-0;
  }

  p {
    @apply mb-6;
  }

  p:last-child {
    @apply mb-0;
  }

  a {
    border-bottom: 2px solid $black;
  }
}

.font-body {
  @apply mb-1;
  font-size: 16px;
  letter-spacing: 0.5px;
  line-height: 28px;

  &:last-child {
    @apply mb-0;
  }

  a:not(.anim-underline-in):hover {
    border-bottom: 1px solid $black;
  }
}

.font-sub {
  font-size: 14px;
  letter-spacing: 0.5px;
  line-height: 22px;
  
}

.font-footer {
  font-size: 20px;
  letter-spacing: 0px;
  line-height: 32px;
}

.font-highlight {
  font-size: 20px;
  letter-spacing: 0.5px;
  line-height: 32.2px;
}

