@screen md {
  .font-h1 {
    font-size: 60px;
    letter-spacing: 0;
    line-height: 75px;
  }

  .font-h2 {
    font-size: 43px;
    letter-spacing: 0.5px;
    line-height: 54px;
  }

  .font-h3 {
    font-size: 30px;
    letter-spacing: 0.5px;
    line-height: 38px;
  }

  .font-h4 {
    font-family: BasisGrotesquePro;
    font-size: 30px;
    letter-spacing: 0.018em;
    line-height: 1.66667em;
  }

  .font-paragraph {
    font-size: 24px;
    letter-spacing: 0.4px;
    line-height: 39px;
  }

  .font-body {
    font-size: 18px;
    letter-spacing: 0.5px;
    line-height: 30px;
  }

  .font-sub {
    font-size: 14px;
    letter-spacing: 0.5px;
    line-height: 22px;
  }

  .font-footer {
    font-size: 24px;
    letter-spacing: 0.44px;
    line-height: 39px;
  }

  .font-highlight {
    font-size: 30px;
    letter-spacing: 0.5px;
    line-height: 38px;
  }
}

@media (min-width: 1600px) {
  .font-h1 {
    font-size: min(calc(100vw * 60 / 1600), 72px);
    letter-spacing: 0;
    line-height: 1.25em;
  }

  .font-h2 {
    font-size: calc(100vw * 43 / 1600);
    letter-spacing: 0.5px;
    line-height: 1.25581em;
  }

  .font-h3 {
    font-size: calc(100vw * 30 / 1600);
    letter-spacing: 0.5px;
    line-height: 1.26667em;
  }

  .font-paragraph {
    font-size: calc(100vw * 24 / 1600);
    letter-spacing: 0.4px;
    line-height: 1.625em;
  }

  .font-body {
    font-size: calc(100vw * 18 / 1600);
    letter-spacing: 0.5px;
    line-height: 1.66667em;
  }

  .font-sub {
    font-size: calc(100vw * 14 / 1600);
    letter-spacing: 0.5px;
    line-height: 1.57142em;
  }

  .font-footer {
    font-size: calc(100vw * 24 / 1600);
    letter-spacing: 0.5px;
    line-height: 1.625em;
  }

  .font-highlight {
    font-size: calc(100vw * 30 / 1600);
    letter-spacing: 0.5px;
    line-height: 1.26667em;
  }
}

@media (min-width: 1920px) {
  .font-h1 {
    font-size: calc(60px * 1.2);
  }

  .font-h2 {
    font-size: calc(43px * 1.2);
  }

  .font-h3 {
    font-size: calc(30px * 1.2);
  }

  .font-paragraph {
    font-size: calc(24px * 1.2);
  }

  .font-body {
    font-size: calc(18px * 1.2);
  }

  .font-sub {
    font-size: calc(14px * 1.2);
  }

  .font-footer {
    font-size: calc(24px * 1.2);
  }

  .font-highlight {
    font-size: calc(30px * 1.2);
  }
}