.header-offset {
  padding-top: 110px;
}

.header-main {
  @apply fixed w-full flex items-center text-white;
  mix-blend-mode: difference;
  transform: translate3d(0, 0, 0) !important;
}

.header-main {
  @apply bg-transparent;
  padding-bottom: calc($site-offset-sm / 2);
  padding-top: $site-offset-sm;
  transition: $short ease;
}

@screen md {
  .header-offset {
    padding-top: 156px;
  }
  .header-main {
    padding-bottom: calc($site-offset-lg / 2);
    padding-top: $site-offset-lg;
  }
}
