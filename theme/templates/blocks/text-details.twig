{% if sectionClass is not defined %}
  {% set sectionClass = [''] %}
{% endif %}

{% if client is not defined %}
  {% set client = 'Client name' %}
{% endif %}


<section class="section-md {{ sectionClass|join(' ') }}">
  <div class="container">

    <div class="row">
      <div class="col w-6/12 md:w-3/12 md:ml-1/12 lg:w-2/12 lg:ml-2/12">
        <p class="font-sub">
          Client
        </p>
        <p class="font-sub text-grey">
          {{ client }}
        </p>
      </div>
      <div class="col w-6/12 md:w-3/12 lg:w-2/12">
        <p class="font-sub">
          Services
        </p>
        <p class="font-sub text-grey">
          {% if services is not defined %}
            Strategy<br>Branding<br>Website<br>Copywriting
          {% else %}
            {{ services }}
          {% endif %}
        </p>
      </div>
    </div>

  </div>
</section>