{% if sectionClass is not defined %}
  {% set sectionClass = [""] %}
{% endif %}

{% if text is not defined %}
  {% set text = "Lorem ipsum dolor sit amet, consectetur adipiscing elit" %}
{% endif %}

<section class="section-md {{ sectionClass|join(' ') }}">
  <div class="container">

    <div class="row">
      <div class="col w-full lg:w-8/12 lg:mx-2/12 fw:w-6/12 fw:mx-3/12">
        {% if subtitle is defined %}
          {% if subtitle != "" %}
          <p class="font-body mb-1">
            {{ subtitle|raw }}
          </p>
          {% endif %}
        {% endif %}
        <h2 class="font-h2 font-medium">
          {{ text }}
        </h2>
      </div>
    </div>

  </div>
</section>