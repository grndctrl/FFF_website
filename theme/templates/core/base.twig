<!DOCTYPE html>
<html lang="en">
<head>
  {% include "core/metadata.twig" %}

  {% hook "seo" %}
</head>

<body class="bg-black text-white">
    <div class="barba-wipe z-40"></div>

    {% block header %}
      {% include "layout/header.twig" %}
    {% endblock %}

    <div class="main-wrapper z-10" data-barba="wrapper">
      <main class="main" data-barba="container" data-barba-namespace="">
        {% block main %}{% endblock %}

        {% block scripts %}{% endblock %}
      </main>
    </div>

    {% block footer %}
      {% include "layout/footer.twig" %}
    {% endblock %}

  <script src="{{ siteUrl }}/dist/js/common.js"></script>
  <script src="{{ siteUrl }}/dist/js/main.js"></script>
</body>
</html>